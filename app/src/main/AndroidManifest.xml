<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nenosof.englishforkids">

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <meta-data android:name="com.google.android.gms.version" android:value="@integer/google_play_services_version"/>
        <activity
            android:name="com.nenosoft.englishforkids.Splash" android:screenOrientation="portrait"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.Translucent" />
        <activity android:name="com.nenosoft.englishforkids.start_page"></activity>
        <activity android:name="com.nenosoft.englishforkids.alphabets"></activity>
        <activity android:name="com.nenosoft.englishforkids.fruites"></activity>
        <activity android:name="com.nenosoft.englishforkids.flower"></activity>
        <activity android:name="com.nenosoft.englishforkids.color"></activity>
        <activity android:name="com.nenosoft.englishforkids.countries"></activity>
        <activity android:name="com.nenosoft.englishforkids.vegetables"></activity>
        <activity android:name="com.nenosoft.englishforkids.shapes"></activity>
        <activity android:name="com.nenosoft.englishforkids.animals"></activity>
        <activity android:name="com.nenosoft.englishforkids.lookandchoose" android:screenOrientation="portrait"></activity>
        <activity android:name="com.nenosoft.englishforkids.Result" android:screenOrientation="portrait"></activity>
        <activity android:name="com.nenosoft.englishforkids.quiz" android:screenOrientation="portrait"></activity>
        <activity
            android:name="com.nenosoft.englishforkids.Videoplayer"
            android:screenOrientation="landscape"></activity>
        <activity android:name="com.nenosoft.englishforkids.MainActivity"></activity>
        <activity
            android:name="com.nenosoft.englishforkids.Mainpage" android:screenOrientation="portrait"></activity>
    </application>

</manifest>
